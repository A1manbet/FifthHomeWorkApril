<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00FF00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_text_1"
        android:textColorHint="@color/white"
        android:hint="Username"
        android:background="@color/dark_green"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_register"
        android:layout_width="400dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/edit_text_2"
        android:textColorHint="@color/white"
        android:hint="Email"
        android:background="@color/dark_green"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_1"
        android:layout_width="400dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/edit_text_3"
        android:textColorHint="@color/white"
        android:hint="Password"
        android:background="@color/dark_green"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_2"
        android:layout_width="400dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/button"
        android:text="NEXT"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_view"
        android:src="@drawable/ic_sovaaa"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Trivia"
        android:textSize="34sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>